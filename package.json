{
  "name": "nextjs-messenger",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/messenger/index.js",
  "types": "./dist/messenger/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/messenger/index.js",
      "types": "./dist/messenger/index.d.ts"
    },
    "./messenger/api/serverAdapter": {
      "import": "./dist/messenger/api/serverAdapter.js",
      "types": "./dist/messenger/api/serverAdapter.d.ts",
      "environment": "node"
    },
    "./messenger/api/defaultAdapter": {
      "import": "./dist/messenger/api/defaultAdapter.js",
      "types": "./dist/messenger/api/defaultAdapter.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "test": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "overrides": {
    "@joshwooding/vite-plugin-react-docgen-typescript": "0.6.2",
    "test-exclude": "7.0.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-controls": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "jsdom": "20.0.3",
    "storybook": "^8.6.14",
    "typescript": "^5.0.0",
    "vite": "^6.4.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
